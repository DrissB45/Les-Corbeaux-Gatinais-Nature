{% extends "layoutAdmin.html.twig" %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/species.css">
{% endblock %}

{% block title %}
	{{parent()}}
	| Espèces
{% endblock %}

{% block content %}
	<div class="container block-form vh-100">
		<div class="row pt-4">
			<h1 class="text-center">Espèces Version Admin</h1>
			<div class="col-sm-10 m-auto">
				<div class="card card-admin mt-4 overflow-auto">
					<ul class="px-4">
						{% for organism in organisms %}
							<li class="d-flex justify-content-between align-items-center mt-4">
								{{organism.name}}
								<div class="link-admin d-flex gap-3 align-items-center">
									<div class="update">
										<a class="btn btn-primary" href="/especes/editer">Éditer</a>
									</div>
									<form action="/especes/supprimer" method="post">
										<button class="btn btn-danger">Supprimer</button>
									</form>
								</div>
							</li>
						{% endfor %}
					</ul>
				</div>
				<div class="add-entry">
					<a class="btn btn-secondary" href="/especes/ajouter">Ajouter</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
