{% extends "layoutAdmin.html.twig" %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/species.css">
{% endblock %}

{% block title %}
	{{parent()}}
	| Espèces
{% endblock %}

{% block content %}
	<div class="container block-form vh-100">
		<div class="row pt-4">
			<h1 class="text-center">Espèces Version Admin</h1>
			<div class="col-12 col-sm-10 m-auto">
				<div class="card card-admin mt-4 overflow-auto">
					<ul class="px-4">
						{% for specie in species %}
							<li class="d-flex justify-content-between align-items-center mt-4">
								{{specie.name}}
								<div class="link-admin d-flex gap-3 align-items-center">
									<div class="btn btn-primary">
										<a href="#">Editer</a>
									</div>
									<form action="" method="post">
									<div class="btn btn-danger">
										<a href="#">Supprimer</a>
									</div>
									</form>
								</div>
							</li>
						{% endfor %}
					</ul>
				</div>
				<div class="add-entry">
					<button class="btn btn-secondary">
						<a href="#">Ajouter</a>
					</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
