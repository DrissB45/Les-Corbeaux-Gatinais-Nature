{% extends 'layoutAdmin.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/activity.css">
{% endblock %}

{% block content %}
	
    
	{% for circuit in circuits %}
			<div class="activitySection row justify-content-evenly align-items-center m-5">
				<div class="col-lg-4">
					<img class="activityImg rounded" src={{ circuit.picture is null ? '/assets/images/imgPlaceHolder.jpg' : circuit.picture }}   alt="circuitPicture" srcset="">
				</div>
				<div class="col-lg-4">
					<h2 class="text-center m-5">{{ circuit.title }}</h2>
					<p class="text-center text-primary">{{ circuit.description }}</p>
				</div>
			</div>
	{% endfor %}
    
{% endblock %}

